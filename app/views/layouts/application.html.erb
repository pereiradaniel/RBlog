<!DOCTYPE html>
<html>
<head>
  <title>RBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="nav-bar">
		<div class="app-title">
			<div class="home-button"><%= link_to 'RBlog', root_path %></div>
		</div>
		<div class="user-options">
			<% if current_user %>
				<div class="user-option"><%= current_user.name %></div>
				<div class="user-option"><%= link_to 'Logout', '/logout' %></div>
			<% else %>
				<div class="user-option"><%= link_to 'Login', '/login' %></div>
				<div class="user-option"><%= link_to 'Signup', '/signup' %></div>
			<% end %>
		</div>
	</div>

	<%= yield %>

</body>
</html>
