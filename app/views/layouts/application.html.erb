<!DOCTYPE html>
<html>
<head>
  <title>RBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div>
		<div>
		<% if current_user %>
			<%= link_to 'Logout', '/logout' %>
		<% else %>
			<%= link_to 'Login', '/login' %>
			<%= link_to 'Signup', '/signup' %>
		<% end %>
		</div>
		<div>
			<%= link_to 'Home', root_path %>
		</div>
	</div>

	<%= yield %>

</body>
</html>
