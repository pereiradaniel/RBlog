<%= form_for :post, url: posts_path do |f| %>

	<% if @post.errors.any? %>
		<div>
			<h2>
				<%= pluralize(@post.errors.count, "error") %> prevented this post from being saved:
			</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :text %>
		<%= f.text_field :text %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end %>

<%= link_to 'Index', posts_path %>