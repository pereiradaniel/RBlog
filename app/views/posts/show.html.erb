<h1>#PostShow</h1>
<div>
	<div>
		<p>
			<%= @post.text %>
		</p>
	</div>
	<div>
		<h2>Add a comment:</h2>
		<%= form_for([@post, @post.comments.build]) do |f| %>
			<p>
				<%= f.label :commenter %>
				<%= f.text_field :commenter %>
			</p>
			<p>
				<%= f.label :body %>
				<%= f.text_area :body %>
			</p>
			<p>
				<%= f.submit %>
			</p>
		<% end %>
	</div>
	<div>
		<%= link_to 'Index', posts_path %>
	</div>
	<div>
		<%= link_to 'Edit', edit_post_path(@post) %>
	</div>
</div>