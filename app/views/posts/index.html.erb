<h1>#PostsIndex</h1>
<%= link_to 'New Post', new_post_path %>
<% @posts.each do |post| %>
	<div>
		<%= post.text %>
	</div>
	<div>
		<%= link_to 'View', post_path(post) %>
		<% if current_user %>
			<% if current_user.id == post.user_id %>
				<%= link_to 'Edit', edit_post_path(post) %>
				<%= link_to 'Destroy', post_path(post),
					method: :delete,
					data: { confirm: 'Are you sure?' } %>
			<% end %>
		<% end %>
	</div>
<% end %>