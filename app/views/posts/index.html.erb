<h1>#PostsIndex</h1>
<div class="basic-button">
	<%= link_to 'New Post', new_post_path %>
</div>
<div>
	<% @posts.each do |post| %>
		<div>
			<div>
				<%= post.text %>
			</div>
			<div>
				<div class="basic-button">
					<%= link_to 'View', post_path(post) %>
				</div>
				<% if current_user %>
					<% if current_user.id == post.user_id %>
						<div class="basic-button">
							<%= link_to 'Edit', edit_post_path(post) %>
						</div>
						<div class="basic-button">
							<%= link_to 'Destroy', post_path(post),
							method: :delete,
							data: { confirm: 'Are you sure?' } %>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>